    .calcu.container(hidden)
      .row
        .btn.output 0
        .btn.btn-primary.enter =
      .row
        .btn.btn-primary.num 7
        .btn.btn-primary.num 8
        .btn.btn-primary.num 9
        .btn.btn-info.op +
      .row
        .btn.btn-primary.num 4
        .btn.btn-primary.num 5
        .btn.btn-primary.num 6
        .btn.btn-info.op -
      .row
        .btn.btn-primary.num 1
        .btn.btn-primary.num 2
        .btn.btn-primary.num 3
        .btn.btn-info.op *
      .row
        .btn.btn-primary.num 0
        .btn.btn-danger C
        .btn.btn-default Del
        .btn.btn-info.op /

    #select_career.container(hidden)
      .btn-group.btn-group-vertical
        %a.btn.btn-primary(href="#") 無職業
        .btn-group
          .btn.btn-primary.dropdown-toggle(data-toggle="dropdown")
            戰士學派
            %span.caret
          %ul.dropdown-menu(role="menu")
            %li
              %a(href="#") 戰士
            %li
              %a(href="#") 戰神
            %li
              %a(href="#") 勇者
        .btn-group
          .btn.btn-primary.dropdown-toggle(data-toggle="dropdown")
            尋道者學派
            %span.caret
          %ul.dropdown-menu(role="menu")
