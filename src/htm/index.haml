    #select_attr.container(hidden)
      .row
        .btn.for-null(data-attr="")
        .btn.for-metal(data-attr="metal")
        .btn.for-wood(data-attr="wood")
      .row
        .btn.for-water(data-attr="water")
        .btn.for-fire(data-attr="fire")
        .btn.for-earth(data-attr="earth")

    #point(hidden)
      .add.btn.btn-primary +
      .cut.btn.btn-warning -

    #menu.container(hidden)
      #initi.btn.btn-primary 初始化
      #setting.btn.btn-primary(data-toggle="modal" data-target="#setwindow") 設定

    #setwindow.modal.fade(role="dialog")
      .modal-dialog
        .modal-content
          .modal-header
            .btn.close(data-dismiss="modal" aria-hidden="true") &times;
            %h3.modal-title 設定
          .modal-body
            .row
              %label(for="formhp") 血量上限
              %input#formhp(type="number" value="250")
            .row
              .checkbox.col-xs-offset-3.col-xs-6
                %label
                  %input(type="checkbox" checked disabled) 操作完即關閉選單
              .checkbox.col-xs-offset-3.col-xs-6
                %label
                  %input(type="checkbox" checked disabled) 星辰規則
              .checkbox.col-xs-offset-3.col-xs-6
                %label
                  %input(type="checkbox" checked disabled) 環境規則
              .checkbox.col-xs-offset-3.col-xs-6
                %label
                  %input(type="checkbox" checked disabled) 職業規則
              .checkbox.col-xs-offset-3.col-xs-6
                %label
                  %input(type="checkbox" checked disabled) 暗黑規則
              .checkbox.col-xs-offset-3.col-xs-6
                %label
                  %input(type="checkbox" checked disabled) 精靈規則
          .modal-footer
            .btn.btn-default(data-dismiss="modal") 關閉
            .btn.btn-primary#save_setting 儲存

    %script(src="https://code.jquery.com/jquery-1.11.1.min.js")
